{% extends 'base.html.twig' %}

{% block title %}Mon compte - La Boutique !
{% endblock %}

{% block content %}
	<div class="mx-2">
		<h1>
			Mon compte
		</h1>


		<span>
			Bonjour
			{{ app.user.firstname }}, bienvenu dans votre espace personnel.
		</span>
		<br>

		{% if is_granted('ROLE_ADMIN') %}
			<p>
				Si vous êtes admin :
				<a href="/admin">
					Backoffice
				</a>
			</p>

		{% endif %}
		<hr>
		<div class="row">
			<div class="col-md-4">
				<div class="account-item text-center">
					<img src="{{ asset('assets/img/padlock (2).png') }}" alt="Modifier mot de passe">
					<br>
					<a href="{{ path('account_password') }}">
						Modifier mot de passe
					</a>
				</div>
			</div>
			<div class="col-md-4">
				<div class="account-item text-center">
					<img src="{{ asset('assets/img/home-address.png') }}" alt="Gérer mes adresses.">
					<br>
					<a href="{{ path('account_address') }}">
						Gérer mes adresses.
					</a>
				</div>
			</div>
			<div class="col-md-4">
				<div class="account-item text-center">
					<img src="{{ asset('assets/img/buying.png') }}" alt="Mes commandes">
					<br>
					<a href="{{ path('account_order') }}">
						Mes commandes
					</a>
				</div>
			</div>
		</div>


		<hr>
	</div>
{% endblock %}
